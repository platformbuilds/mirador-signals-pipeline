# Mirador Stack - Docker Compose Environment Variables

# Node Configuration
NODE_NAME=node1
NODE_IP=127.0.0.1

# Cluster Configuration (for multi-node setup)
NODE1_IP=127.0.0.1
NODE2_IP=127.0.0.1
NODE3_IP=127.0.0.1

# VictoriaMetrics Configuration
VM_RETENTION=30d
VM_STORAGE_PATH=/victoria-metrics-data

# VictoriaTraces Configuration
VT_RETENTION=30d
VT_STORAGE_PATH=/victoria-traces-data

# VictoriaLogs Configuration
VL_RETENTION=30d
VL_STORAGE_PATH=/victoria-logs-data

# HAProxy Configuration
HAPROXY_STATS_PORT=8404
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASS=admin

# OTLP Gateway Ports
OTLP_GRPC_PORT=4317
OTLP_HTTP_PORT=4318

# Metrics Ports
PROMETHEUS_PORT=8888
